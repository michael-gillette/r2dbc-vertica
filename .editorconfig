root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[pom.xml]
indent_size = 2

[*.java]
ij_continuation_indent_size = 4
ij_java_blank_lines_after_anonymous_class_header = 1
ij_java_blank_lines_after_class_header = 1
ij_java_blank_lines_around_field = 1
ij_java_blank_lines_around_field_in_interface = 1
ij_java_blank_lines_before_package = 1
ij_java_class_count_to_use_import_on_demand = 999
ij_java_class_names_in_javadoc = 3
ij_java_if_brace_force = always
ij_java_keep_blank_lines_before_right_brace = 1
ij_java_keep_blank_lines_between_package_declaration_and_header = 1
ij_java_keep_blank_lines_in_code = 1
ij_java_keep_blank_lines_in_declarations = 1
ij_java_packages_to_use_import_on_demand = 999
ij_java_wrap_long_lines = true
max_line_length = 120

[*.yaml]
indent_size = 2
